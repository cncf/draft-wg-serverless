{
    "$id": "https://wg-serverless.org/data-mock.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Serverless Workflow specification Data Mock schema. Used to define static data to be used during workflow execution.",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Workflow name",
            "minLength": 1
        },
        "description": {
            "type": "string",
            "description": "Workflow description"
        },
        "eventsData": {
            "type": "array",
            "description": "Defins data mocks for events data",
            "items": {
                "type": "object",
                "$ref": "#/definitions/eventDataDef"
            }
        },
        "actionsResult": {
            "type": "array",
            "description": "Define data mocks for actions result",
            "items": {
                "type": "object",
                "$ref": "#/definitions/actionResultDef"
            }
        },
        "workflowResult": {
            "type": "object",
            "description": "Workflow data result"
        }
    },
    "required": [],
    "definitions": {
        "eventDataDef": {
            "type": "object",
            "description": "Mock event data",
            "properties": {
                "eventDefName": {
                    "type": "string",
                    "desription": "Unique name of defined event in the workflow definition",
                    "minLength": 1
                },
                "data": {
                    "type": "object",
                    "description": "Mock event data"
                }
            },
            "required": [
                "eventDefName",
                "data"
            ]
        },
        "actionResultDef": {
            "type": "object",
            "description": "Mock action result",
            "properties": {
                "actionDefName": {
                    "type": "string",
                    "desription": "Unique name of defined action in the workflow definition",
                    "minLength": 1
                },
                "result": {
                    "type": "object",
                    "description": "Mock action result"
                }
            },
            "required": [
                "actionDefName",
                "result"
            ]
        }
    }
}